			<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
    	<script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    	<script src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js"></script>
			<script src="http://ajax.cdnjs.com/ajax/libs/backbone.js/0.3.3/backbone-min.js"></script>
		</head>

		<body>

<!-- - - - - - - - - - - - - - - NAV BAR - - - - - - - - - - - - - - - - -->
<!-- 										         PENDING 																 -->
<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

<!-- - - - - - - - - - - - - - - ROW 1 Brand Bar Row - - - - - - - - - - -->
			<div class="brand-bar">
				<div class="row">
					<div class="large-3 columns">
						<h2>chirp chirp</h2>
						<hr />
					</div>

					<div class="large-9 columns">
						<h2>let's find some real tweets</h2>
						<hr />
					</div>
				</div>
			</div>

		<!-- - - - - - - Lat & Long - - - - - - - - -->

			<div class="row">

				<!-- Nested columns for lat + long -->
				<div class="large-12 columns">
					<div class="lat-long-container">

						<!-- - - - - - locate me button - - - - - -->
						<div class="large-3 columns">
							<div class="locate-me">
								<a href="#" id="locate-butt" class="large button">press me to get started</a>
							</div>
						</div>

						<!-- - - - - - latitude - - - - - - -->
						<div class="large-4 columns">
							<div class="latitude">
								<div class="latitude-text">
									<h4>latitude: </h4>
								</div>

								<div class="latitude-calc">
									<h4></h4>
								</div>
							</div>
						</div>

						<!-- - - - - - longitude - - - - - - -->
						<div class="large-5 columns">
							<div class="longitude">
								<div class="longitude-text">
									<h4>longitude: </h4>
								</div>

								<div class="longitude-calc">
									<h4></h4>
								</div>
							</div>
						</div>
					</div> <!-- - class lat long container -->
				</div>	<!-- - close large 9 columns -->
			</div>

<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->

		<!-- - - - - - - - - - - - - - - Footer Div - - - - - - - - - - - - - - -  -->

			<div class="row">
				<div class="footer">
					<div class="large-12 columns">
					</div>
				</div>
			</div>

		<!-- - - - - - - - - - - - - - - - - END  - - - - - - - - - - - - - - - -  -->
